{
    "rules": {
        "indent": ["error", 2],
        "no-inline-comments": "off",
        "semi": "error"
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },

    "env": {
        "es6": true
    },
    "overrides": [
        {
            "files": ["gulptasks/*.js", "gulpfile.js"],
            "rules": {
                "require-jsdoc": "off",
                "no-unused-expressions": "off",
                "indent": 0,
                "semi": 0
            }
        }
    ]
}